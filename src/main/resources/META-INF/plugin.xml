<idea-plugin>
    <id>org.bakasa.projects.laravelartisanplugin</id>
    <name>Laravel Artisan Menu</name>
    <vendor email="bakasaru@list.ru" url="https://vk.com/bakasa">Nick Andreev</vendor>
    <version>0.1.0</version>

    <description><![CDATA[
    Plugin for Laravel projects which allows to run Artisan commands from menu
    ]]></description>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="Artisan.Menu" text="Artisan" description="Laravel Artisan menu">
            <add-to-group group-id="MainMenu" relative-to-action="ToolsMenu" anchor="after"/>
            <action id="Artisan.Maintenance.Down" class="laravel.artisan.actions.Test" text="Down the application" description="Put the application into maintenance mode"/>
            <action id="Artisan.Maintenance.Up" class="laravel.artisan.actions.Test" text="Up the application" description="Bring the application out of maintenance mode"/>
        </group>
        <group id="Artisan.Make" text="Make..." description="Make (i.e. create) files from template" popup="true">
            <add-to-group group-id="Artisan.Menu" anchor="first"/>
            <action id="Artisan.Make.Controller" class="laravel.artisan.actions.MakeController" text="Controller" description="Create a new controller class"/>
            <action id="Artisan.Make.Model" class="laravel.artisan.actions.Test" text="Model" description="Create a new Eloquent model class"/>
            <action id="Artisan.Make.Migration" class="laravel.artisan.actions.Test" text="Migration" description="Create a new migration file"/>
            <action id="Artisan.Make.Event" class="laravel.artisan.actions.Test" text="Event" description="Create a new event class"/>
            <action id="Artisan.Make.Listener" class="laravel.artisan.actions.Test" text="Listener" description="Create a new event listener class"/>
        </group>
    </actions>
</idea-plugin>